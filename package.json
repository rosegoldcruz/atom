{
  "name": "atom-arbitrage-contracts",
  "version": "2.0.0",
  "description": "ATOM - Advanced Efficient Optimized Network - Arbitrage Smart Contracts",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat clean && npx hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run contracts/scripts/deploy-polygon.js --network polygon",
    "deploy:local": "hardhat run contracts/scripts/deploy-polygon.js --network localhost",
    "test-arbitrage": "hardhat run contracts/scripts/test-arbitrage.js --network polygon",
    "verify": "hardhat verify --network polygon",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "gas-report": "REPORT_GAS=true hardhat test",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol'",
    "size": "hardhat size-contracts",
    "fund": "hardhat fund-contracts --contracts",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance --account"
  },
  "keywords": [
    "arbitrage",
    "defi",
    "ethereum",
    "base",
    "balancer",
    "curve",
    "flash-loans",
    "mev",
    "smart-contracts",
    "solidity"
  ],
  "author": "ATOM Team",
  "license": "MIT",
  "devDependencies": {
    "@aave/core-v3": "1.19.3",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@openzeppelin/contracts": "5.4.0",
    "@openzeppelin/contracts-upgradeable": "5.4.0",
    "@openzeppelin/hardhat-upgrades": "3.9.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": "20.11.30",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "2.26.3",
    "hardhat-deploy": "0.11.45",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.1",
    "ts-node": "10.9.2",
    "typechain": "^8.3.0",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@aave/periphery-v3": "^2.0.3",
    "@chainlink/contracts": "^1.2.0",
    "dotenv": "16.4.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rosegoldcruz/arbitrage-trustless-onchain-module.git"
  },
  "bugs": {
    "url": "https://github.com/rosegoldcruz/arbitrage-trustless-onchain-module/issues"
  },
  "homepage": "https://github.com/rosegoldcruz/arbitrage-trustless-onchain-module#readme",
  "hardhat": {
    "defaultNetwork": "polygon"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "printWidth": 120,
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 120,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false,
          "explicitTypes": "always"
        }
      }
    ]
  },
  "solhint": {
    "extends": "solhint:recommended",
    "rules": {
      "compiler-version": [
        "error",
        "^0.8.0"
      ],
      "func-visibility": [
        "warn",
        {
          "ignoreConstructors": true
        }
      ],
      "max-line-length": [
        "error",
        120
      ],
      "not-rely-on-time": "off",
      "avoid-low-level-calls": "off",
      "avoid-sha3": "warn"
    }
  },
  "type": "commonjs",
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}
