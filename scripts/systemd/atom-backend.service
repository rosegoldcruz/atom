[Unit]
Description=ATOM FastAPI Backend (Uvicorn)
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/atom
EnvironmentFile=/etc/atom/backend.env
ExecStart=/usr/bin/python3 -m uvicorn backend.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
StandardOutput=append:/var/log/atom/backend.log
StandardError=append:/var/log/atom/backend.err.log

[Install]
WantedBy=multi-user.target

